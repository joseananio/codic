{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": false,
        "allowJs": false,
        "outDir": "./compiled",
        "moduleResolution":"node",
        "lib": [
            "es2015",
        ]
    },
    "include": [
        "lib/**/*",
        "test/**/*.test.ts"
    ],
    "exclude": [
        "node_module",
        "**/.spec.ts"
    ]
}
