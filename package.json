{
  "name": "sched",
  "author": {
    "name": "joseananio",
    "url": "http://github.com/joseananio"
  },
  "version": "0.0.1",
  "main": "dist/cjs/bundle.js",
  "module": "dist/es/bundle.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "start": "NODE_ENV=dev nodemon src/main.js --exec babel-node",
    "build:es": "NODE_ENV=es rollup -c",
    "build:cjs": "NODE_ENV=cjs rollup -c",
    "build:umd": "NODE_ENV=umd rollup -c",
    "build": "run-s clean && run-p build:cjs build:es",
    "test": "ava"
  },
  "dependencies": {
    "eslint": "^5.5.0",
    "human-interval": "^0.1.6",
    "ioredis": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "ava": "^0.25.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.4.0"
  },
  "ava":{
    "files":[
			"tests/**/*.js",
			"!src/**/*.js",
			"!src/",
			"!node_modules/**/*.js"
		],
		"sources":[
			"**/*.{js,jsx,ts}",
			"!dist/**/*"
    ],
    "require":[
      "@babel/register",
      "@babel/polyfill"
    ],
    "cache":false,
		"failFast":false,
		"verbose":true,
		"tap":true
  }
}
